<html>
  <head>
    <title>Silver Mangement</title>
    <style>
      tr:nth-child(even) {background-color: #304254;}
      td { color: yellow; align: center; text-align: center;}
      th { color: #FF0000; text-align: center;}
    </style>
  </head>
  <body>
    
    <body style="background-color: #121212;">
    <font color="yellow">
      <center>
      <h1>
        Enter Bar Silver
        <form action="/enter_bar" method="post">
          <label for="bought_date">Bought Date:</label><br>
          <input type="date" id="bought_date" name="bought_date" step="0.01" required="required"><br>

          <label for="spot_price">Spot Price:</label><br>
          <input type="number" id="spot_price" name="spot_price" step="0.01" required="required" value="0.00"><br>

          <label for="amount">Amount ( count ):</label><br>
          <input list="bar-silver-amount" id="amount" name="amount" />
          <datalist id="bar-silver-amount">
            <option value="1">
            <option value="2">
            <option value="3">
            <option value="4">
            <option value="5">
            <option value="6">
            <option value="7">
            <option value="8">
            <option value="9">
            <option value="10">
            <option value="20">
          </datalist><br>

          <label for="price">Price:</label><br>
          <input type="number" id="price" name="price" step="0.01" required="required" value=""><br>

          <label for="shipping">Shipping:</label><br>
          <input type="number" id="shipping" name="shipping" step="0.01" required="required" value="0.00"><br>

          <label for="total">Total $:</label><br>
          <input type="number" id="total" name="total" required="required" step="0.01" value="0.00"><br>

          <label for="oz">OZ:</label><br>
          <input list="bar-silver-oz" id="oz" step="0.01" name="oz" />
          <datalist id="bar-silver-oz">
            <option value="1">
            <option value="2">
            <option value="3">
            <option value="4">
            <option value="5">
            <option value="6">
            <option value="7">
            <option value="8">
            <option value="9">
            <option value="10">
            <option value="11">
          </datalist><br>

          <label for="name">Name:</label><br>
          <input list="bar-silver-type" id="name" name="name" />
          <datalist id="bar-silver-type">
            <option value="Apmex Bar">
            <option value="1 oz Den of Thieves Silver Bar BU">
            <option value="1 oz Silver bar - Ben Franklin $100 bill design">
            <option value="5 oz Cast-Poured Silver Bar - 9Fine Mint">
          </datalist><br>

          <label for="status">Status:</label><br>
          <select name="status" id="status">
            <option value="own">Own</option>
            <option value="sold">Sold</option>
            <br>
          </select><br>

          <label for="sold_value">Sold Value:</label><br>
          <input type="number" id="sold_value" name="sold_value" step="0.01" required="required" value="0.00"><br>

          <label for="seller">Seller:</label><br>
          <input type="text" id="seller" name="seller" required="required" value="APMEX"><br>

          <label for="bar-silver-method">Method:</label><br>
          <input list="bar-silver-type1" id="bar-silver-method" name="method" />
          <datalist id="bar-silver-type1">
            <option value="Todd">
            <option value="Gift">
            <option value="Reddit">
            <option value="Person">
            <option value="APMEX">
            <option value="JMbullion">
            <option value="Ebay">
            <option value="nh expo">
            <option value="Golden State Mint">
          </datalist><br><br>
          <input type="submit" value="Submit">
        </form>
        <form action="/status" method="post">
            <label for="change_status">Change Status:</label><br>
            <input type="number" id="status_bar" name="status_bar" required="required" value="1"><br>
            <label for="change_status">Sold Price:</label><br>
            <input type="number" id="sold_price" name="sold_price" required="required" value="1"><br>
            <input type="submit" value="Submit">
        </form><br><br>
        
        <form action="/delete_row" method="post">
          <label for="delete_row">Delete Row:</label><br>
          <input type="number" id="delete_bar" name="delete_bar" required="required" value="1"><br>
          <input type="submit" value="Submit">  
        </form>
         
      </center>
    </h1>
  </body>
</html>
