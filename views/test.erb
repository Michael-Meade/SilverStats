<html>
  <head>
    <title>Silver Mangement</title>
    <style>
      td { color: yellow; align: center; text-align: center;}
      th { color: #FF0000; text-align: center;}
      table, th, td { border: 1px solid yellow; border-collapse: collapse; font-size: 20}
      tr:nth-child(even) {background-color: #304254;}
      .tabs {
        list-style: none; 
        position: relative; 
        margin: 0;
        padding: 0;
        width: 100%;  
        font-family: sans-serif
      }
      .tabs li { display: inline-block; }
      .tabs input[type="radio"] { display: none; }
      .tabs label { display: block; cursor: pointer; padding: 10px 15px; border: 2px solid yellow; border-bottom: 0; border-radius: 3px 3px 0 0; }
      .tabs .tab-panel {  display: none; overflow: hidden; width: 100%; position: absolute; left: 0; border-top: 2px solid yellow; }
      .tabs [id^="tab"]:checked + label { background-color: red; color: #fff; }
      .tabs [id^="tab"]:checked ~ [id^="tab-panel"] { display: block; }
    </style>
  </head>
  <body>
    
    <body style="background-color: #121212;">
    <font color="yellow">
      <h1><center>Silver Stats</center></h1>
      <% @silver = Inventory.new %>
      <center>
      <% bar     = @silver.select_total_oz(1) %>
      <% junk    = @silver.select_total_oz(1) %>
      <% bullion = @silver.select_total_oz(3) %>
      <% total   = bar + junk + bullion %>
      <table style="width:50%" border="1" align="center">
        <tr>
          <th>Type</th>
          <th>Amount OZ</th>
          <th>USD Total</th>
        </tr>
        <tr>
          <td><font color="white">Bar</font></td>
          <td><%= @silver.select_price_avg(1).round(2) %> oz</td>
          <td><font color="#1CE815">$<%= Silver.get_silver_price(bar).round(2) %></font></td>
        </tr>
        <tr>
          <td><font color="white">Junk</font></td>
          <td><%= @silver.select_price_avg(2).round(2) %> oz</td>
          <td><font color="#1CE815">$<%= Silver.get_silver_price(junk).round(2) %></font></td>
        </tr>
        <tr>
          <td><font color="white">Bullion</font></td>
          <td><%= @silver.select_price_avg(3).round(2) %> oz</td>
          <td><font color="#1CE815">$<%= Silver.get_silver_price(bullion).round(2) %></font></td>
        </tr>
        <tr>
          <td><font color="white">Total</font></td>
          <td><%= total.round(2) %> oz</td>
          <td><font color="#1CE815">$<%= Silver.get_silver_price(total).round(2) %></font></td>
        </tr>
      </table>
      <br><br><br>
        <ul class="tabs">
          <li>
            <input id="tab1" type="radio" name="tabs" checked />
            <label for="tab1">Bar Silver</label>
            <div id="tab-panel1" class="tab-panel">
              <h1><center>Select Bars Silver</center></h1> 
              <table style="width:100%" border="1" align="center">
                <tr>
                  <th>ID</th>
                  <th>Bought Date</th>
                  <th>Spot Price</th>
                  <th>Amount</th>
                  <th>Price</th>
                  <th>Shipping</th>
                  <th>Total</th>
                  <th>OZ</th>
                  <th>Name</th>
                  <th>Status</th>
                  <th>Sold Value</th>
                  <th>Seller</th>
                  <th>Method</th>
                </tr>
                <% bar =  @silver.select(1, html_table: true) %>
                <% bar.each do |i| %>
                <tr>
                  <td><font color="white"><%= i[0] %></font></td>
                  <td><font color="white"><%= i[1] %></font></td>
                  <td><font color="white"><%= i[2] %></font></td>
                  <td><font color="white"><%= i[3] %></font></td>
                  <td><font color="white"><%= i[4] %></font></td>
                  <td><font color="white"><%= i[5] %></font></td>
                  <td><font color="white"><%= i[6] %></font></td>
                  <td><font color="white"><%= i[7] %></font></td>
                  <td><font color="white"><%= i[8] %></font></td>
                  <td><font color="white"><%= i[9] %></font></td>
                  <td><font color="white"><%= i[10] %></font></td>
                  <td><font color="white"><%= i[11] %></font></td>
                  <td><font color="white"><%= i[12] %></font></td>
                <% end %>
                </tr>
              </table>
              <h1>Bar Silver Method of Purchase</h1>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Method</th>
                  <th>Count</th>
                </tr>
                <% bar = @silver.select_method(1, html_table: false) %>
                <% bar.each do |i| %>
                  <tr>
                    <td><font color="white"><%= i[0] %></font></td>
                    <td><font color="white"><%= i[1] %></font></td>
                  </tr>
                <% end %>
              </table>
              <br><br>
              <h1>Bar Shipping Information</h1>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Total Cost</th>
                  <th>Average</th>
                  <th>Count  </th>
                </tr>
                <% bar_shipping       = @silver.shipping_total(1)  %>
                <% avg_bar_shipping   = @silver.shipping_avg(1)    %>
                <tr>
                  <td><font color="white"><%= bar_shipping          %></font></td>
                  <td><font color="white"><%= avg_bar_shipping[0]   %>  </font></td>
                    <td><font color="white"><%= avg_bar_shipping[1] %>  </font></td>
                </tr>
              </table>
              <br><br>
              <h1>Bars Silver Average Price</h1>
              <% bar_price_avg =  @silver.select_price_avg(1) %>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Average Price</th>
                </tr>
                <tr>
                  <td><font color="white"><%= bar_price_avg %></font></td>
                </tr>
              </table>
              <br><br>
              <h1>Bars Sold Total</h1>
              <% bar_sold_total = @silver.sold_total(1) %>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Sold Value</th>
                </tr>
                <tr>
                  <td><font color="white">$<%= bar_sold_total %></font></td>
                </tr>
              </table>
              <br><br>
              <h1>Bar Sold vs Own</h1>
              <% bar_sold =  @silver.sold_own %>
              <% oz_bar_sold_total = @silver.sold_oz_total(1)%>
              <% bar_usd = Silver.get_silver_price(oz_bar_sold_total) %>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Own</th>
                  <th>Sold</th>
                  <th>Sold OZ Total</th>
                  <th>USD Sold Total</th>
                </tr>
                <tr>
                  <td><font color="white"><%= bar_sold[0]    %></font></td>
                  <td><font color="white"><%= bar_sold[2]    %></font></td>
                  <td><font color="white"><%= bar_sold_total %></font></td>
                  <td><font color="white">$<%= bar_usd        %></font></td>
                </tr>
              </table>
              <br><br>
            </div>
          </li>
          <li>
            <input id="tab2" type="radio" name="tabs" checked />
            <label for="tab2">Junk Silver</label>
            <div id="tab-panel2" class="tab-panel">
              <h1><center>Select Junk Silver</center></h1>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>ID</th>
                  <th>Bought Date</th>
                  <th>Spot Price</th>
                  <th>Amount</th>
                  <th>Price</th>
                  <th>Shipping</th>
                  <th>Total</th>
                  <th>OZ</th>
                  <th>Name</th>
                  <th>Status</th>
                  <th>Sold Value</th>
                  <th>Seller</th>
                  <th>Method</th>
                </tr>
                <% junk =  @silver.select(2, html_table: true) %>
                <% junk.each do |i| %>
                <tr>
                  <td><font color="white"><%= i[0] %></font></td>
                  <td><font color="white"><%= i[1] %></font></td>
                  <td><font color="white"><%= i[2] %></font></td>
                  <td><font color="white"><%= i[3] %></font></td>
                  <td><font color="white"><%= i[4] %></font></td>
                  <td><font color="white"><%= i[5] %></font></td>
                  <td><font color="white"><%= i[6] %></font></td>
                  <td><font color="white"><%= i[7] %></font></td>
                  <td><font color="white"><%= i[8] %></font></td>
                  <td><font color="white"><%= i[9] %></font></td>
                  <td><font color="white"><%= i[10] %></font></td>
                  <td><font color="white"><%= i[11] %></font></td>
                  <td><font color="white"><%= i[12] %></font></td>
                <% end %>
                </tr>
              </table>
              <br><br>
              <h1>Junk Silver Method of Purchase</h1>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Method</th>
                  <th>Count</th>
                </tr>
                <% junk = @silver.select_method(2, html_table: false) %>
                <% junk.each do |i| %>
                  <tr>
                    <td><font color="white"><%= i[0] %></font></td>
                    <td><font color="white"><%= i[1] %></font></td>
                  </tr>
                <% end %>
              </table>
              <br><br>
              <h1>Junk Shipping Information</h1>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Total Cost</th>
                  <th>Average</th>
                  <th>Count  </th>
                </tr>
                <% total_junk_shipping = @silver.shipping_total(2)  %>
                <% avg_junk_shipping   = @silver.shipping_avg(2)    %>
                  <tr>
                    <td><font color="white"><%= total_junk_shipping  %>  </font></td>
                    <td><font color="white"><%= avg_junk_shipping[0] %>  </font></td>
                    <td><font color="white"><%= avg_junk_shipping[1] %>  </font></td>
                  </tr>
              </table>
              <br><br>
              <h1>Junk Silver Average Price</h1>
              <% junk_price_avg =  @silver.select_price_avg(2) %>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Average Price</th>
                </tr>
                <tr>
                  <td><font color="white"><%= junk_price_avg %></font></td>
                </tr>
              </table>
              <br><br>
              <h1>Sold Total</h1>
              <% sold_total = @silver.sold_total(2) %>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Sold Value</th>
                </tr>
                <tr>
                  <td><font color="white">$<%= sold_total %></font></td>
                </tr>
              </table>
              <br><br>
              <h1><center>Franklin Half Dollars</center></h1> 
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Franklin Half Dollars Count</th>
                  <th>Silver Amount</th>
                  <th>Silver Amound in USD</th>
                </tr>
                <tr>
                  <td><font color="white"><%= Silver.franklins(html_table: true)[0] %></font></td>
                  <td><font color="white"><%= Silver.franklins(html_table: true)[1] %> OZ</font></td>
                  <td><font color="#1CE815">$<%= Silver.get_silver_price(Silver.franklins(html_table: true)[1]).round(2) %></font></td>
                </tr>
              </table>
              <br><br>
              <h1>Junk Sold vs Own</h1>
              <% junk_sold =  @silver.sold_own %>
              <% junk_sold_total = @silver.sold_oz_total(2)%>
              <% junk_usd = Silver.get_silver_price(junk_sold_total) %>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Own</th>
                  <th>Sold</th>
                  <th>Sold OZ Total</th>
                  <th>USD Sold Total</th>
                </tr>
                <tr>
                  <td><font color="white"><%= junk_sold[1]    %></font></td>
                  <td><font color="white"><%= junk_sold[3]    %></font></td>
                  <td><font color="white"><%= junk_sold_total %></font></td>
                  <td><font color="white">$<%= junk_usd %></font></td>
                </tr>
              </table>
              <br><br>
            </div>
          </li>
          <li>
            <input id="tab3" type="radio" name="tabs" checked />
            <label for="tab3">Bullion Silver</label>
              <div id="tab-panel3" class="tab-panel">
              <h1><center>Select Bullions Silver</center></h1> 
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>ID</th>
                  <th>Bought Date</th>
                  <th>Spot Price</th>
                  <th>Amount</th>
                  <th>Price</th>
                  <th>Shipping</th>
                  <th>Total</th>
                  <th>OZ</th>
                  <th>Name</th>
                  <th>Status</th>
                  <th>Sold Value</th>
                  <th>Seller</th>
                  <th>Method</th>
                </tr>
                <% bull =  @silver.select(3, html_table: true) %>
                <% bull.each do |i| %>
                <tr>
                  <td><font color="white"><%= i[0] %></font></td>
                  <td><font color="white"><%= i[1] %></font></td>
                  <td><font color="white"><%= i[2] %></font></td>
                  <td><font color="white"><%= i[3] %></font></td>
                  <td><font color="white"><%= i[4] %></font></td>
                  <td><font color="white"><%= i[5] %></font></td>
                  <td><font color="white"><%= i[6] %></font></td>
                  <td><font color="white"><%= i[7] %></font></td>
                  <td><font color="white"><%= i[8] %></font></td>
                  <td><font color="white"><%= i[9] %></font></td>
                  <td><font color="white"><%= i[10] %></font></td>
                  <td><font color="white"><%= i[11] %></font></td>
                  <td><font color="white"><%= i[12] %></font></td>
                <% end %>
                </tr>
              </table>
              <br><br>
              <h1>Bullion Silver Method of Purchase</h1>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Method</th>
                  <th>Count</th>
                </tr>
                <% bullion = @silver.select_method(3, html_table: false) %>
                <% bullion.each do |i| %>
                  <tr>
                    <td><font color="white"><%= i[0] %></font></td>
                    <td><font color="white"><%= i[1] %></font></td>
                  </tr>
                <% end %>
              </table>
              <br><br>
              <h1>Bullion Shipping Information</h1>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Total Cost</th>
                  <th>Average</th>
                  <th>Count  </th>
                </tr>
                <% bullion_shipping    = @silver.shipping_total(3)  %>
                <% avg_bull_shipping   = @silver.shipping_avg(3)    %>
                  <tr>
                    <td><font color="white"><%= bullion_shipping     %>  </font></td>
                    <td><font color="white"><%= avg_bull_shipping[0] %>  </font></td>
                    <td><font color="white"><%= avg_bull_shipping[1] %>  </font></td>
                  </tr>
              </table>
              <br><br>
              <h1>Bullion Silver Average Price</h1>
              <% bullion_price_avg =  @silver.select_price_avg(2) %>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Average Price</th>
                </tr>
                <tr>
                  <td><font color="white"><%= bullion_price_avg %></font></td>
                </tr>
              </table>
              <br><br>
              <h1>Bullion Sold Total</h1>
              <% bullion_sold_total = @silver.sold_total(2) %>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Sold Value</th>
                </tr>
                <tr>
                  <td><font color="white">$<%= bullion_sold_total %></font></td>
                </tr>
              </table>
              <br><br>
              <h1>Bullion Sold vs Own</h1>
              <% sold =  @silver.sold_own %>
              <% bull_sold_total = @silver.sold_oz_total(3)%>
              <% bull_usd = Silver.get_silver_price(bull_sold_total) %>
              <table style="width:50%" border="1" align="center">

                <tr>
                  <th>Own</th>
                  <th>Sold </th>
                  <th>Sold OZ Total</th>
                  <th>USD Sold Total</th>
                </tr>
                <tr>
                  <td><font color="white"><%= sold[4] %></font></td>
                  <td><font color="white"><%= sold[5] %></font></td>
                  <td><font color="white"><%= bull_sold_total %></font></td>
