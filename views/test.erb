          </li>
          <li>
            <input id="tab4" type="radio" name="tabs" />
            <label for="tab4">Cryptocurrency</label>
            <div id="tab-panel4" class="tab-panel">
              <% r = File.read(ENV['CRYPTO']) %>
              <% j = JSON.parse(r)   %>           
              <% xmr   =  CryptoPriceFinder.monero(j["monero"]).round(2).to_s   %>
              <% xlm   =  CryptoPriceFinder.stellar(j["stellar"]).round(2).to_s %>
              <% btc   =  CryptoPriceFinder.bitcoin(j["bitcoin"]).round(2).to_s %>
              <% total = xmr.to_i + xlm.to_i + btc.to_i %>
              <br><br>
              <table style="width:50%" border="1" align="center">
                <tr>
                  <th>Cryptocurrency</th>
                  <th>Amount USD</th>
                  <th>Crypto Amount</th>
                </tr>
                <tr>
                  <td><font color="white">Monero</font></td>
                  <td><font color="#1CE815">$<%= xmr %></font></td>
                  <td><font color="#1CE815">$<%= j['monero']%> XMR</font></td>
                </tr>
                <tr>
                  <td><font color="white">Stellar</font></td>
                  <td><font color="#1CE815">$<%= xlm %></font></td>
                  <td><font color="#1CE815">$<%= j['stellar']%> XLM</font></td>
                </tr>
                <tr>
                  <td><font color="white">Bitcoin</font></td>
                  <td><font color="#1CE815">$<%= btc %></font></td>
                  <td><font color="#1CE815">$<%= j['bitcoin']%> BTC</font></td>
                </tr>
                <tr>
                  <td><font color="white">Total</font></td>
                  <td><font color="#1CE815">$<%= total.round(2).to_s %></font></td>
                  <td><font color="#1CE815"></font></td>
                </tr>
              </table>
              <br><br>
            </div>
          </li>
        <!--  
        <li>
          <input id="tab5" type="radio" name="tabs" />
          <label for="tab5"></label>
          <div id="tab-panel5" class="tab-panel">
          </li>
        </ul>
        -->
      </ul>
    </center>
  </body>
</html>